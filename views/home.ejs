<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat</title>

    <!-- Theme and page styles -->
    <link rel="stylesheet" href="/styles/theme.css" />
    <link rel="stylesheet" href="/styles/chat.css" />
  </head>
  <body>
    <div class="chat-app">
      <!-- Sidebar (previous chats) -->
      <aside
        class="sidebar"
        id="sidebar"
        aria-label="Previous chats"
        data-open="false"
      >
        <div class="sidebar__inner">
          <div class="sidebar-header">
            <div class="brand">Chats</div>
            <button
              class="btn-icon"
              id="sidebar-close"
              aria-label="Close sidebar"
            >
              ‚úï
            </button>
          </div>
          <div class="sidebar-actions">
            <button class="btn-ghost" id="new-chat">+ New chat</button>
            <button class="btn-ghost" onclick="location.href='/'">üè† Home</button>
            <button class="btn-ghost" onclick="location.href='/logout'">üö™ Logout</button>
          </div>

      </aside>
      <div
        class="sidebar-backdrop"
        id="sidebar-backdrop"
        data-open="false"
      ></div>

      <!-- Main column -->
      <div class="chat-main">
        <header class="chat-header">
          <div class="chat-header__inner">
            <div class="chat-title"></div>
            <div style="display: flex; gap: 8px">
              <button
                class="btn-icon"
                id="sidebar-open"
                aria-label="Open sidebar"
              >
                ‚ò∞
              </button>
              <button class="btn" type="button" onclick="location.href='/'">
                hello.
              </button>
            </div>
          </div>
        </header>

        <main class="messages" aria-live="polite">
          <ol class="messages__inner" id="messages"></ol>
        </main>

        <footer class="composer">
          <div class="composer__inner">
            <form id="composer-form" class="composer-form" autocomplete="off">
              <textarea
                id="composer-input"
                class="composer-input"
                name="message"
                rows="1"
                placeholder="Ask anything..."
                required
                aria-label="Message (Enter to send, Shift+Enter for newline)"
                data-enter-to-send="true"
              ></textarea>
              <button class="btn" type="submit" aria-label="Send">Send</button>
            </form>
          </div>
        </footer>
      </div>
    </div>

    <!-- Page script -->
    <script
      src="https://cdn.socket.io/4.8.1/socket.io.min.js"
      integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
      crossorigin="anonymous"
    ></script>
    <!-- Axios for API requests -->
    <script
      src="https://cdn.jsdelivr.net/npm/axios@1.7.7/dist/axios.min.js"
      integrity="sha256-2gk3jYQ5qDN8ukE9lc8eI9fQHwxE9c7C7aB1qfI5kBw="
      crossorigin="anonymous"
    ></script>
    <script>
      const socket = io();
    </script>
    <!-- Reusable chat utilities -->
    <script src="/scripts/utils.js" defer></script>
    <script src="/scripts/chat.js" defer></script>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const sidebar = document.getElementById("sidebar");
        const backdrop = document.getElementById("sidebar-backdrop");
        const openBtn = document.getElementById("sidebar-open");
        const closeBtn = document.getElementById("sidebar-close");

        function openSidebar() {
          sidebar.setAttribute("data-open", "true");
          backdrop.setAttribute("data-open", "true");
        }

        function closeSidebar() {
          sidebar.setAttribute("data-open", "false");
          backdrop.setAttribute("data-open", "false");
        }

        openBtn.addEventListener("click", openSidebar);
        closeBtn.addEventListener("click", closeSidebar);
        backdrop.addEventListener("click", closeSidebar);

        // Close sidebar with ESC key
        document.addEventListener("keydown", (e) => {
          if (e.key === "Escape") {
            closeSidebar();
          }
        });
      });
    </script>
  </body>
</html>
